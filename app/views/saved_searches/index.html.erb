<div class="container user-settings">
  <div class="row">
    <div class="col">
      <h1 class="pt-3">Saved Searches</h1>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col">
      <% @saved_searches.each do |saved_search| %>
        <div class="card mb-3">
          <div class="card-body">
            <p>
              <strong>
                <%= saved_search.name %>
              </strong><br>
              <i class='text-muted'>
                <%= saved_search.query %>
              </i>
            </p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
